<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".test">

    <TextView
        android:id="@+id/meet_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="44dp"
        android:text="会议名:" />

    <EditText
        android:id="@+id/meet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/meet_label"
        android:layout_alignBottom="@+id/meet_label"
        android:layout_marginLeft="56dp"
        android:layout_toRightOf="@+id/meet_label"
        android:ems="10"
        android:inputType="text"
        android:linksClickable="false"
        android:textIsSelectable="false">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/meet_label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/meet_label"
        android:layout_below="@+id/meet_name"
        android:layout_marginTop="42dp"
        android:text="备注：" />

    <EditText
        android:id="@+id/meet_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:singleLine="false"
        android:inputType="text|textMultiLine"
        android:layout_alignTop="@+id/meet_label2"
        android:layout_alignLeft="@+id/meet_name"
        android:layout_alignParentRight="true" />

</RelativeLayout>
